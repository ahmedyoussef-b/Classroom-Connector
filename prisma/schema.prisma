
datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  role      Role     @default(ELEVE)
  ambition  String?
  classeId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  classe      Classe?    @relation(fields: [classeId], references: [id])
  etat        EtatEleve?
  messages    Message[]
  reactions   Reaction[]

  @@index([classeId])
}

model Classe {
  id           String @id @default(uuid())
  nom          String
  professeurId String @unique
  chatroomId   String @unique

  professeur User      @relation(fields: [professeurId], references: [id])
  eleves     User[]
  chatroom   Chatroom  @relation(fields: [chatroomId], references: [id])

  @@index([professeurId])
}

model Metier {
  id          String   @id @default(uuid())
  nom         String
  description String
  theme       Json
  etats       EtatEleve[]
}

model EtatEleve {
  id         String  @id @default(uuid())
  eleveId    String  @unique
  metierId   String?
  isPunished Boolean @default(false)

  eleve  User    @relation(fields: [eleveId], references: [id], onDelete: Cascade)
  metier Metier? @relation(fields: [metierId], references: [id])

  @@index([metierId])
}

model Chatroom {
  id        String    @id @default(uuid())
  messages  Message[]
  classe    Classe?
}

model Message {
  id          String     @id @default(uuid())
  message     String
  senderId    String
  senderName  String
  chatroomId  String
  createdAt   DateTime   @default(now())

  sender    User       @relation(fields: [senderId], references: [id])
  chatroom  Chatroom   @relation(fields: [chatroomId], references: [id])
  reactions Reaction[]

  @@index([senderId])
  @@index([chatroomId])
}

model Reaction {
  id        String   @id @default(uuid())
  emoji     String
  userId    String
  messageId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id])
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([emoji, userId, messageId])
  @@index([userId])
  @@index([messageId])
}


enum Role {
  ELEVE
  PROFESSEUR
}
