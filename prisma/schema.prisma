// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

model User {
  id              String       @id @default(cuid())
  email           String       @unique
  name            String?
  role            Role
  ambition        String?
  classe          Classe?      @relation("eleves", fields: [classeId], references: [id])
  classeId        String?
  etat            EtatEleve?
  messages        Message[]
  reactions       Reaction[]
  classeEnseignee Classe[]     @relation("professeur")
}

enum Role {
  ELEVE
  PROFESSEUR
}

model Classe {
  id           String     @id @default(cuid())
  nom          String
  professeur   User?      @relation("professeur", fields: [professeurId], references: [id], onDelete: Restrict, onUpdate: Restrict)
  professeurId String?    @unique
  eleves       User[]     @relation("eleves")
  chatroom     Chatroom?
  chatroomId   String?    @unique
}

model EtatEleve {
  id         String  @id @default(cuid())
  eleve      User    @relation(fields: [eleveId], references: [id])
  eleveId    String  @unique
  isPunished Boolean @default(false)
  metier     Metier? @relation(fields: [metierId], references: [id])
  metierId   String?
}

model Metier {
  id          String      @id @default(cuid())
  nom         String
  description String
  theme       Json
  etats       EtatEleve[]
}

model Message {
  id          String     @id @default(cuid())
  message     String
  createdAt   DateTime   @default(now())
  sender      User       @relation(fields: [senderId], references: [id])
  senderId    String
  senderName  String
  chatroom    Chatroom   @relation(fields: [chatroomId], references: [id])
  chatroomId  String
  reactions   Reaction[]
}

model Reaction {
  id        String  @id @default(cuid())
  emoji     String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  message   Message @relation(fields: [messageId], references: [id])
  messageId String
}

model Chatroom {
  id       String    @id @default(cuid())
  classe   Classe    @relation(fields: [classeId], references: [id])
  classeId String    @unique
  messages Message[]
}
